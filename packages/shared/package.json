{
	"name": "shared",
	"version": "1.0.0",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"exports": {
		".": {
			"import": "./out/context.js",
			"types": "./out/context.d.ts"
		},
		"./constants": {
			"import": "./out/constants.js",
			"types": "./out/constants.d.ts"
		}
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:content-script"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"./src"
			],
			"output": [
				"./out"
			]
		},
		"build:content-script": {
			"command": "rollup -c",
			"files": [
				"rollup.config.js",
				"./out/content-script"
			],
			"output": [
				"./dist"
			],
			"dependencies": [
				"build:ts"
			]
		}
	}
}
