{
	"name": "vscode-ui-connector",
	"version": "0.0.2",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"type": "module",
	"module": "./out/index.js",
	"main": "./out/index.js",
	"types": "./out/index.d.ts",
	"bin": {
		"vscode-ui-connector": "./bin/vscode-ui-connector.js",
		"vuc": "./bin/vscode-ui-connector.js"
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:rollup",
				"copy-content-script"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./src",
				"tsconfig.json"
			],
			"output": [
				"./out"
			],
			"dependencies": [
				"../shared:build"
			]
		},
		"build:rollup": {
			"command": "rollup -c",
			"files": [
				"./out",
				"rollup.config.js"
			],
			"output": [
				"./dist"
			],
			"dependencies": [
				"build:ts"
			]
		},
		"copy-content-script": {
			"command": "cp ../shared/dist/content-script.js ./out/.",
			"dependencies": [
				"build:rollup",
				"../shared:build:content-script"
			],
			"output": [
				"./out/content-script.js"
			]
		}
	},
	"devDependencies": {
		"@koa/bodyparser": "^5.0.0",
		"@koa/cors": "^4.0.0",
		"@koa/router": "^12.0.1",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@types/co-body": "^6.1.3",
		"@types/koa": "^2.13.11",
		"@types/koa__cors": "^4.0.3",
		"@types/koa__router": "^12.0.4",
		"glob": "^10.3.10",
		"koa": "^2.14.2",
		"shared": "^1.0.0"
	},
	"files": [
		"./bin",
		"./dist",
		"./out"
	],
	"dependencies": {
		"get-port": "^7.0.0"
	}
}
