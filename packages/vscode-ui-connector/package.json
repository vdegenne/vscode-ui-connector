{
	"name": "vscode-ui-connector",
	"version": "0.1.2",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"type": "module",
	"module": "./out/index.js",
	"main": "./out/index.js",
	"types": "./out/index.d.ts",
	"repository": {
		"url": "https://github.com/vdegenne/vscode-ui-connector.git",
		"directory": "vscode-ui-connector"
	},
	"bin": {
		"vscode-ui-connector": "./bin/vscode-ui-connector.js",
		"vuc": "./bin/vscode-ui-connector.js"
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:dist"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./src",
				"./tsconfig.json"
			],
			"output": [
				"./out"
			]
		},
		"build:dist": {
			"command": "rollup -c",
			"files": [
				"./rollup.config.js"
			],
			"dependencies": [
				"build:ts"
			],
			"output": [
				"./dist"
			]
		}
	},
	"devDependencies": {
		"rollup": "^4.28.1",
		"@koa/bodyparser": "^5.1.1",
		"@koa/cors": "^5.0.0",
		"@koa/router": "^13.1.0",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/co-body": "^6.1.3",
		"@types/koa": "^2.15.0",
		"@types/koa__cors": "^5.0.0",
		"@types/koa__router": "^12.0.4",
		"glob": "^11.0.0",
		"koa": "^2.15.3"
	},
	"files": [
		"./bin",
		"./dist",
		"./out"
	],
	"dependencies": {
		"get-port": "^7.1.0"
	}
}
